{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>korosuke613/renovate-config"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "JSR dependencies in deno.json imports",
      "managerFilePatterns": [
        "/^deno\\.jsonc?$/"
      ],
      "matchStrings": [
        "\"(?<depName>[^\"]+)\":\\s*\"jsr:(?<packageName>[^@]+)@(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "npm",
      "registryUrlTemplate": "https://npm.jsr.io",
      "depTypeTemplate": "jsr"
    },
    {
      "customType": "regex",
      "description": "NPM dependencies in deno.json imports",
      "managerFilePatterns": [
        "/^deno\\.jsonc?$/"
      ],
      "matchStrings": [
        "\"(?<depName>[^\"]+)\":\\s*\"npm:(?<packageName>[^@/]+(?:/[^@]+)?)@(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "npm",
      "depTypeTemplate": "npm"
    }
  ],
  "packageRules": [
    {
      "description": "JSR packages grouping",
      "matchDepTypes": [
        "jsr"
      ],
      "groupName": "JSR dependencies",
      "separateMinorPatch": false
    },
    {
      "description": "NPM packages in Deno project",
      "matchDepTypes": [
        "npm"
      ],
      "matchFileNames": [
        "deno.json",
        "deno.jsonc"
      ],
      "groupName": "NPM dependencies"
    },
    {
      "description": "Deno standard library auto-merge patch updates",
      "matchDepTypes": [
        "jsr"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "matchPackageNames": [
        "/^@std//"
      ]
    },
    {
      "description": "Weekly schedule for dependency updates",
      "matchFileNames": [
        "deno.json",
        "deno.jsonc"
      ],
      "schedule": [
        "before 4am on monday"
      ]
    }
  ]
}
